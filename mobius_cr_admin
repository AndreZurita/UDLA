# #Score de supresion
# 
# ##
# 
# base_des <- df %>% bind_rows()
# 
# score <- function(x) {
#   
#   x$score_sup_2 <- 0.35*(x$nota/100) + 0.10*(x$importancia) - 0.10*(x$betweenness/100) -
#     0.20*(x$total_path/100) - 0.25*(x$tasa_rep_media)
#   
# }
# 
# a <- sapply(base_des, score)
